<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">

  <listener>
    <listener-class>com.moandjiezana.essayist.config.EssayistMerfServletContextListener</listener-class>
  </listener>

<!--   <listener> -->
<!--     <listener-class>com.moandjiezana.tent.essayist.config.EssayistServletContextListener</listener-class> -->
<!--   </listener> -->

  <filter>
    <filter-name>Utf8Filter</filter-name>
    <filter-class>com.moandjiezana.tent.essayist.config.Utf8Filter</filter-class>
  </filter>

  <filter>
    <filter-name>HttpMethodFilter</filter-name>
    <filter-class>com.moandjiezana.tent.essayist.config.HttpMethodFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Utf8Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>HttpMethodFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>MerfFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
